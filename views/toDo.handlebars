<h1>Hello {{name}} Here is your To Do List!</h1>
<h2>You have {{toDoCount}} items on your to do list.</h2>
<form method="post">
  <label for="toDoName">Task Name:</label>
  <input type="text" name="name" id="toDoName">
  <label for="toDoCity">Task Location(City):</label>
  <input type="text" name="city" id="toDoCity">
  <label for="toDoMinTemp">Minimum Temperature for Task:</label>
  <input type="text" name="minTemp" id="toDoMinTemp">
  <input type="submit" name="Add Item" value="Add Item">
</form>
{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>{{this.name}} in {{this.city}} when the temperature is at least {{this.minTemp}}</h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}